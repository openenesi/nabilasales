{# empty Twig template #}
{% extends "base.html.twig" %}

{% block body %}
    <div class="page">
        <div class="page-single">
            <div class="container">
                <div class="row">
                    <div class="col col-login mx-auto">
                        <div class="text-center mb-6">
                            NABILA<br />
                            <img src='{{asset('img/nabila-logo.jpeg')}}'/>
                        </div>
                        <form class="card" id="login-form" action="{{path('logincheck')}}" method="post">
                            <div class="card-body p-6">
                                <div class="card-title">Login to your account</div>
                                {% if error is defined %}
                                    <div class="alert alert-danger">{{error.getMessage()}}</div>
                                {% endif %}
                                <div class="form-group">
                                    <label class="form-label">Username</label>
                                    <input id="login-username" type="text" name="_username" required="" value="{{(last_username is defined)?last_username}}" class="form-control" placeholder='Username'>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">
                                        Password
                                        <!--<a href="./forgot-password.html" class="float-right small">I forgot password</a>-->
                                    </label>
                                    <input id="login-password" type="password" name="_password" required="" class="form-control" placeholder='Password'>
                                </div>
                                <div class="form-footer">
                                    <input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}" />
                                    <button id="login" class="btn btn-primary btn-block">Login</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}