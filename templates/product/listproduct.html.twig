{# empty Twig template #}
{% extends "base.html.twig" %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header d-flex align-content-center">
                    <h3 class="h4">List of Product</h3>
                </div>
                <div class="card-body">    
                    <div class='listdiv'>
                        <table class="table table-striped table-sm table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>#</th><th>Product Name</th><th>Product Code</th><th>Unit Price</th><th>Metrics</th><th>Actions</th>                                
                                </tr>
                            </thead>
                            <tbody>
                                {% for product in products %}
                                    <tr>
                                        <td>{{loop.index}}</td>
                                        <td>{{product.productName}}</td>
                                        <td>{{product.productCode}}</a></td>
                                        <td>&#8358;{{product.unitPrice}}</td>
                                        <td>{{product.unitMetric|capitalize}}</td>
                                        <td><a href="{{path('editproduct',{'productid':product.id})}}" class="btn btn-primary btn-sm">Modify</a> <button data-id='{{product.id}}' class="btn btn-danger btn-sm">Delete</button></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock content %}